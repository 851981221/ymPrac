<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ymPrac.service.dao.UserMapper">

    <select id="countAll" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM `user`
    </select>

    <select id="selectUseDolar" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM `user`
        WHERE id = ${houseCode}
    </select>

    <select id="selectUseHashtag" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM `user`
        WHERE id = ${houseCode}
    </select>
</mapper>